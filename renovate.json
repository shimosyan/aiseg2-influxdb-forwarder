{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "github>aquaproj/aqua-renovate-config#2.8.2"
  ],
  "labels": ["renovate"],
  "packageRules": [
    {
      "groupName": "Go version updates",
      "matchManagers": ["gomod", "dockerfile", "github-actions"],
      "matchPackageNames": [
        "go",
        "golang",
        "actions/setup-go"
      ],
      "addLabels": ["go-version"],
      "commitMessagePrefix": "chore(go):",
      "commitMessageTopic": "Go version",
      "prTitle": "Update Go version to {{newVersion}}",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["action"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "pinDigests": true,
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["FROM golang:(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)-alpine"],
      "depNameTemplate": "golang",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "groupName": "Go version updates"
    },
    {
      "fileMatch": ["^README\\.md$"],
      "matchStrings": ["- Go (?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)以降"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver",
      "groupName": "Go version updates"
    },
    {
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "go-version:\\s*\\n\\s*-\\s*(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)(?:\\.x)?",
        "go-version:\\s*(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)(?:\\.x)?"
      ],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver",
      "groupName": "Go version updates"
    },
    {
      "fileMatch": ["^\\.github/pull_request_template\\.md$"],
      "matchStrings": ["- \\[ \\] Go (?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)\\+ で動作する"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver",
      "groupName": "Go version updates"
    }
  ],
  "schedule": [
    "* 1 * * *"
  ],
  "automergeSchedule": [
    "* 0 * * *"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false
}
