{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "github>aquaproj/aqua-renovate-config#2.8.2"
  ],
  "labels": ["renovate"],
  "packageRules": [
    {
      "groupName": "Go version updates",
      "matchManagers": ["gomod", "dockerfile", "github-actions", "regex"],
      "matchPackageNames": [
        "go",
        "golang",
        "golang/go",
        "actions/setup-go"
      ],
      "addLabels": ["go-version"],
      "commitMessage": {
        "prefix": "chore(go):",
        "topic": "Go version",
        "subject": "update to {{newVersion}}"
      },
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["action"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "pinDigests": true,
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["FROM golang:(?<currentValue>\\d+\\.\\d+)-alpine"],
      "depNameTemplate": "golang",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^README\\.md$"],
      "matchStrings": ["Go (?<currentValue>\\d+\\.\\d+)以降"],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^go(?<version>.*)$"
    },
    {
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "- (?<currentValue>\\d+\\.\\d+)\\.x"
      ],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^go(?<version>.*)$"
    },
    {
      "fileMatch": ["^\\.github/pull_request_template\\.md$"],
      "matchStrings": ["Go (?<currentValue>\\d+\\.\\d+)\\+ で動作する"],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^go(?<version>.*)$"
    }
  ],
  "schedule": [
    "* 1 * * *"
  ],
  "automergeSchedule": [
    "* 0 * * *"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false
}
